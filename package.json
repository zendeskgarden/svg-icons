{
  "name": "@zendeskgarden/svg-icons",
  "description": "Garden SVG icons",
  "license": "Apache-2.0",
  "author": "Zendesk Garden <garden@zendesk.com>",
  "homepage": "https://garden.zendesk.com/",
  "repository": "https://github.com/zendeskgarden/svg-icons",
  "bugs": {
    "url": "https://github.com/zendeskgarden/svg-icons/issues"
  },
  "version": "5.0.0",
  "main": "dist/index.svg",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "gulp --gulpfile scripts/gulpfile.js --cwd .",
    "format": "prettier-package-json --write && yarn format:optimize --quiet src/**",
    "format:optimize": "svgo --config=.svgo.yml",
    "lint": "eslint scripts/*.js",
    "prepare": "yarn build",
    "start": "yarn build && yarn watch & live-server demo",
    "tag": "[ `git rev-parse --abbrev-ref HEAD` = 'master' ] && standard-version --no-verify",
    "test": "yarn lint && yarn format && git diff --quiet",
    "watch": "yarn build watch"
  },
  "devDependencies": {
    "@zendeskgarden/eslint-config": "7.0.9",
    "babel-eslint": "10.0.1",
    "eslint": "5.10.0",
    "eslint-plugin-notice": "0.7.7",
    "gh-pages": "2.0.1",
    "gulp": "4.0.0",
    "gulp-file": "0.4.0",
    "gulp-svg-sprite": "1.5.0",
    "husky": "1.2.0",
    "live-server": "1.2.1",
    "prettier-package-json": "2.0.1",
    "standard-version": "4.4.0",
    "svgo": "1.1.1"
  },
  "keywords": [
    "garden",
    "icons",
    "svg",
    "zendesk"
  ],
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn format",
      "post-checkout": "if [[ $GIT_PARAMS == *1 ]]; then yarn --ignore-scripts --pure-lockfile; fi",
      "post-merge": "yarn --ignore-scripts --pure-lockfile"
    }
  }
}
